library(igraph)
el <- read.csv("https://raw.githubusercontent.com/im041/Coaching-Slot-/master/edge-be.csv", header=TRUE)
is.data.frame(el)
el
#Funktion graph.data.frame
pr <- graph.data.frame(el, directed=TRUE)
pr

########Visualisierung ab hier##########

#Visualisierung mit Befehlen aus Skript Tag3 Blockseminar

E(pr)$color="grey" # definiert die Kantenfarbe auf grey


V(pr)$shape = "circle"
#definiert, dass alle Knoten als Kreis auftreten

V(pr)$color = "turquoise"


#Visualisierung ohne Labels #Hier gemacht: Gesamtnetzwerk, Label WEg und Knoten kleiner
plot(pr, vertex.size=5, edge.arrow.size=0.05, edge.curved=.2, vertex.label=NA, layout = layout_with_fr, main="Zitationsnetzwerk PR-Einführungsliteratur")

#######Visualisierung bis hier##########
#####das unten drunter haben wir nicht beachtet######


#Visualisierung mit Labels
plot(pr,layout =layout_with_fr)

#Noch machen: schön einfärben und eventuell Kanten zusammenfügen, Netzwerkmaße ausrechnen lassen->braucht man für Interpretation


#Netzwerkma?e
components(pr)
is_connected(pr)
diameter(pr)
edge_density(pr)
mean_distance(pr)

#Clusteranzahl
cluster_walktrap(pr)
#Geaue Clusteranalyse
gc<-cluster_walktrap(pr)          
modularity(gc)
membership(gc)
plot(gc,pr,edge.arrow.size=.2)

#ZentralitÃ¤t des Netzwerks
degree(pr,mode="in")

#Dichte
edge_density(pr)

